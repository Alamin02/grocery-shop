{{#if error}}
<div class = "col-sm-offset-2 col-sm-10">

    <div class="alert alert-danger ">{{error}}</div>

</div>
{{/if}}


<div class="container" style="color: white">
  <h1 class = "headings">LOG IN</h1>
  <form class="form-horizontal" action="/admin/login" method="post">
    <div class="form-group">
      <label class="control-label col-sm-2" for="username">Username:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="email" placeholder="Enter username" name="username" required="required">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-10">          
        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password" required="required">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>
